{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".", // Ensures that paths are resolved relative to the root of the project
    "paths": {
      "@/*": ["./*"]
    },
    "resolveJsonModule": true, // Optional: If you use JSON files
    "moduleResolution": "node", // Ensures TypeScript resolves modules correctly
    "allowSyntheticDefaultImports": true // Handles default imports in some cases
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "exclude": ["node_modules"]
}
